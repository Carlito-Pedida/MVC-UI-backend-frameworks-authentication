<div>
<h1>My Bookmarks</h1>

{{#if user}}
  <p>Welcome, {{user.firstName}} {{user.lastName}}!</p>
  <img
    src="https://www.southernliving.com/thmb/LbSIkRIGvoFC-BfGkzlcBLNS5Ss=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/gettyimages-119452789-2000-e023c7cacad04d928cafc6c4fe6bd694.jpg"
    width="200"
  /><br />
  <form action="/bookmarks/add" method="POST">
    <input type="text" name="title" placeholder="Bookmark Title" />
    <input type="text" name="url" placeholder="URL" />
    <br/>
    <button type="submit">Add New</button>
  </form>
{{else}}
  <a href="/user/login">Login</a>
{{/if}}

<h2>Bookmark List</h2>
{{#if user}}
  {{#each bookmarks}}
    <div class="link-wrap">
      <div class="link">
        <a href={{url}} target="_blank">{{title}}</a>
        <form action='/bookmarks/delete/{{bookmarkId}}' method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  {{/each}}
  {{else}}
  {{#each bookmarks}}
  <div class="link-wrap">
      <div class="link">
        <a href={{url}} target="_blank">{{title}}</a>
        {{/each}}
{{/if}}
</div>
